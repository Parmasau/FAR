/* General Styles */
body {
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f0f0; /* Fallback background color */
    color: #333;
    line-height: 1.6;
}

/* Full-page background image */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('images/backgr.jpg');
    background-size: cover;
    background-position: center;
    opacity: 0.8; /* Adjust opacity for better readability */
    z-index: -1;
}

/* Header Styles */
header {
    color: white;
    padding: 15px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
}

header .logo {
    display: flex;
    align-items: center;
}

header .logo img {
    height: 50px;
    margin-right: 10px;
}

header nav ul {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
}

header nav ul li {
    margin-left: 20px;
}

header nav ul li a {
    color: blueviolet;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s;
}

header nav ul li a:hover {
    color: #d4ffd4; /* Light green hover effect */
}

header nav ul li a.active {
    color: #d4ffd4;
    text-decoration: underline;
    font-weight: bold;
}

/* Smooth scrolling */
html {
    scroll-behavior: smooth;
}

/* Hero Section */
.hero {
    height: 100vh; /* Full viewport height */
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
    background: rgba(0, 0, 0, 0.5); /* Dark overlay for better text visibility */
}

.hero-content h2 {
    font-size: 3rem;
    margin-bottom: 15px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Text shadow for better readability */
}

.hero-content p {
    font-size: 1.5rem;
    margin-bottom: 25px;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
}

.btn {
    background-color: #4CAF50;
    color: white;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 1.1rem;
    transition: background-color 0.3s, transform 0.3s;
}

.btn:hover {
    background-color: #45a049;
    transform: scale(1.05); /* Slight scale effect on hover */
}

/* Services Section */
.services {
    padding: 6rem 7% 2rem;
    background: #f5f5f5;
}

.heading {
    text-align: center;
    font-size: 2.6rem;
    margin-bottom: 3rem;
}

.heading span {
    color: #2ecc71;
}

.service-container {
    display: flex;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 0 1rem;
}

.service-box {
    background: #fff;
    padding: 2rem;
    text-align: center;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.5s ease;
}

.service-box:hover {
    transform: translateY(-10px);
}

.service-box img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
}

.service-box i {
    font-size: 2.5rem;
    color: #2ecc71;
    margin: 1rem 0;
}

.service-box h3 {
    font-size: 1.8rem;
    margin: 1rem 0;
}

.service-box p {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
}

.btn {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background: #2ecc71;
    color: #fff;
    border-radius: 5px;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.3s ease;
}

.btn:hover {
    background: #27ae60;
}

/* Responsive Design */
@media (max-width: 768px) {
    .services {
        padding: 4rem 4% 2rem;
    }
    
    .heading {
        font-size: 2rem;
    }
    
    .service-box {
        padding: 1.5rem;
    }
}


/* Weather Section */
.weather {
    padding: 40px 20px;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
    margin: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.weather h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #333;
}

.weather-info {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 20px auto;
    max-width: 600px;
}

#cityInput {
    padding: 10px;
    width: 80%;
    max-width: 300px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 15px;
}

#getWeatherBtn {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

#getWeatherBtn:hover {
    background-color: #45a049;
}

#weatherResult {
    margin-top: 15px;
    font-size: 1.1rem;
    color: #333;
}

/* Footer */
footer {
    background-color: rgba(51, 51, 51, 0.9); /* Semi-transparent dark background */
    color: white;
    text-align: center;
    padding: 20px;
    margin-top: 40px;
}

footer p {
    margin: 5px 0;
}

/* Responsive Design */
@media (max-width: 768px) {
    .service-cards {
        flex-direction: column;
    }

    .card {
        width: 80%;
        margin: 10px auto;
    }

    .hero-content h2 {
        font-size: 2rem;
    }

    .hero-content p {
        font-size: 1.2rem;
    }
}
